<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.redvus.smibsvirtual">

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:fullBackupOnly="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.SMIBSVirtual">
        <activity
            android:name=".presentation.DaVClockArActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.DaVCalculatorArActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.DaVAutoArActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.DaVParashuteArActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.ARcameraActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.ARealityActivity"
            android:exported="false"
            android:label="@string/actionAR"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.GamesActivity"
            android:exported="false"
            android:label="@string/actionGames"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.HowActivity"
            android:exported="false"
            android:label="@string/actionHow"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.AboutActivity"
            android:exported="true"
            android:label="@string/actionAbout"
            android:screenOrientation="portrait" />
        <activity
            android:name=".presentation.MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.ar.core"
            android:value="required" />
    </application>

</manifest>